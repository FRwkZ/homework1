/* pages/main/mian.wxss */
/* 设置页面整体居中 */
page {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 750rpx;
  background-color: #f0f0f0;
  padding: 20% 0 30%;
}

/* 容器样式 */
.container {
  align-items: center;
  justify-content: center;
  background-color: #ffffff;
  padding: 5% 10%;
  border-radius: 15rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  gap: 15px; /* 按钮之间的间距 */
}

/* 按钮的基础样式 */
.btn {
  width: 100%;
  padding: 10px;
  border: none;
  border-radius: 10rpx;
  color: #fff;
  font-size: 35rpx;
  cursor: pointer;
}

/* 登录按钮样式 */
.btn-login {
  background-color: #007BFF;
}

/* 注册按钮样式 */
.btn-register {
  background-color: #31ed69;
}
