/* pages/bookroom/bookroom.wxss */
page {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #f8f9fa; /* 背景色偏灰白 */
  padding: 13% 0 25%;
}

.container {
  display: flex;
  flex-direction: column;
  gap: 30rpx; /* 增加间距 */
  background-color: #ffffff; /* 白色背景 */
  padding: 40rpx; /* 内边距 */
  border-radius: 20rpx; /* 圆角 */
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1); /* 阴影效果 */
  width: 90%; /* 自适应宽度 */
}

.branch-selection {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx;
  background-color: #eff6ff; /* 浅蓝背景 */
  border-radius: 10rpx;
}

.picker {
  font-size: 30rpx;
  color: #333;
  padding: 10rpx;
  text-align: center;
}

.rooms-container {
  width: 100%;
  max-height: 500rpx; /* 限制滚动高度 */
  overflow-y: scroll;
  background-color: #f5f5f5; /* 浅灰背景 */
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: inset 0 0 5rpx rgba(0, 0, 0, 0.1); /* 内阴影效果 */
}

.room-card {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 10rpx;
  border-radius: 15rpx;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.room-card:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
}

.room-card text {
  font-size: 28rpx;
  color: #444;
}

button {
  width: 100%;
  padding: 25rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  background-color: #4caf50; /* 绿色按钮背景 */
  border: none;
  border-radius: 10rpx;
  cursor: pointer;
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.2s ease, box-shadow 0.2s ease;
}

button:hover {
  background-color: #43a047; /* 按钮变深 */
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.2);
}
