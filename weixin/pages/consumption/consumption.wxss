/* pages/consumption/consumption.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5; /* 浅灰背景 */
  min-height: 100vh; /* 全屏高度 */
  gap: 20rpx; /* 卡片间距 */
}
/* 商品卡片样式 */
.commodity-card {
  width: 90%;
  background-color: #ffffff; /* 白色背景 */
  padding: 20rpx 0;
  border-radius: 16rpx; /* 圆角 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1); /* 卡片阴影 */
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  margin-top: 10rpx;
}

/* 商品信息文字样式 */
.commodity-card text {
  font-size: 30rpx;
  color: #555; /* 深灰文字 */
}

/* 数量控制区域样式 */
.quantity-control {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 10rpx;
}

.quantity-control button {
  width: 40rpx;
  height: 40rpx;
  background-color: #4caf50; /* 绿色背景 */
  color: #ffffff; /* 白色文字 */
  border: none;
  border-radius: 4rpx;
  font-size: 28rpx;
  font-weight: bold;
  display: flex;
  justify-content: center;
  align-items: center;
  cursor: pointer;
}

.quantity-control button:active {
  background-color: #43a047; /* 点击时背景更深 */
}

.quantity-control text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin: 0 10rpx;
}

/* 提交按钮样式 */
.submit-btn {
  width: 90%;
  padding: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  background-color: #ff5722; /* 橙色背景 */
  border: none;
  border-radius: 8rpx;
  cursor: pointer;
  margin-top: 20rpx;
  text-align: center;
}

.submit-btn:active {
  background-color: #e64a19; /* 点击时背景更深 */
}
